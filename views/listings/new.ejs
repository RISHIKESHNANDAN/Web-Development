<% layout("/layouts/boilerplate") %>
<div class="row">
 <div class="col-8 offset-2">
  <br>
    <h3>Create a new Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation">
      <div class="mb-3">  
           <label for="title" class="form-lable">Title</label>
          <input  
              name="listing[title]" 
              placeholder="Enter title"
              type="text" 
              class="form-control"
              required
          />
          <div class="valid-feedback">Title Looks Good</div>
      </div>

      <div class="mb-3">
         <label for="description" class="form-lable">Discription</label>
         <textarea  
         name="listing[description]" 
         class="form-control" 
         required
         ></textarea>
          <div class="invalid-feedback">Invalid Description</div>
      </div>  

      <div class="mb-3">
        <label for="image" class="form-lable">Image</label>
        <input 
        name="listing[image]" 
        placeholder="Enter image url/link"  
        type="text" 
        class="form-control"
        />
        <!-- <div class="invalid-feedback">Image looks Good</div> -->
      </div>
    
      
    
        <div class="row">
            <div class="mb-3 col-md-3">
                 <label for="price" class="form-lable">Price</label>
                 <input 
                 name="listing[price]" 
                 placeholder="Enter price" 
                 class="form-control"
                  required
                 />
                  <div class="invalid-feedback">Price </div>
            </div>

          <div class="mb-3 col-md-4">
             <label for="country" class="form-lable">country</label>
              <input  
              name="listing[country]" 
              placeholder="Enter country" 
              type="text" 
              class="form-control"
              required
              />
              <div class="invalid-feedback">Invalid country</div>
          </div>
        </div>
        <div class="mb-3">
              <label for="location" class="form-lable">Location</label>
              <input 
              name="listing[location]" 
              placeholder="Enter location" 
              type="text"  
              class="form-control"
              required
              />
              <div class="invalid-feedback">Invalid location</div>
        </div>

      <br><br>
      <button class="btn btn-dark add-btn">Add</button>
      
    </form>
    <br>
  </div>
</div>
